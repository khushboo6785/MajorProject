<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    margin-right: 3rem;
    text-align: center;
    margin-top: 2rem;
    margin-bottom: 1rem;
    opacity: 0.8;
    cursor: pointer;
  }
  .filter:hover {
    opacity: 1;
  }
  .filter p {
    font-size: small;
  }

  .form-switch {
    border: 1px solid black;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
    border-radius: 50px;
  }
  .space {
    margin-left: 1rem;
    margin-right: 1rem;
    margin-top: 1rem;
  }
  .taxToggle {
    display: none;
  }
</style>
<body>
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Mountain cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castels</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arstic</p>
    </div>
    <div class="form-check-reverse filter form-switch ms-auto center">
      <div class="space">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(listing of allListings) { %>
    <a
      class="listing-link"
      href="http://localhost:8080/listings/<%= listing._id %>"
    >
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          style="height: 18rem"
          ssss
          alt="..."
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %> /night &nbsp;
            &nbsp; <i class="taxToggle">+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
<script>
  let taxswitch = document.getElementById("switchCheckDefault");
  taxswitch.addEventListener("click", () => {
    let taxToggle = document.getElementsByClassName("taxToggle");
    for (info of taxToggle) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
