<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 2rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
    opacity: 0.8;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
</style>

<nav class="navbar navbar-expand-md border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand"><i class="fa-solid fa-compass"></i></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <% if(typeof countries !== "undefined" && countries.length>0){ %>
      <div class="dropdown navbar-nav ms-auto">
        <button
          class="btn btn-secondary btn-search dropdown-toggle form-control me-2"
          type="button"
          id="countryBtn"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          Select Country
        </button>
        <ul class="dropdown-menu">
          <% for(let country of countries ) { %>
          <li>
            <a onclick="selectCountry('<%= country %>')" class="dropdown-item"
              ><%= country %></a
            >
          </li>
          <% } %>
        </ul>
      </div>
      <% } %>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser){ %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser){ %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
